<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_4.xsd">
    <servlet>
        <servlet-name>EjemploHolaMundo</servlet-name>
        <servlet-class>HolaMundo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EjemploHolaMundo</servlet-name>
        <url-pattern>/Hola</url-pattern>
    </servlet-mapping>
	
    <servlet>
        <servlet-name>EjemploInformacion</servlet-name>
        <servlet-class>Informacion</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EjemploInformacion</servlet-name>
        <url-pattern>/Info</url-pattern>
    </servlet-mapping>
	
	<context-param>
		<param-name>parametrodeprueba</param-name>
		<param-value>valordeprueba</param-value>
	</context-param>
	
</web-app>
